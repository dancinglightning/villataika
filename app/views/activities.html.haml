- activities.each_with_index do |activity , index|
  .activitybox
    .boxinner
      %a.lightbox{:href => "/activities/large/#{activity}.jpg", :title => t(".#{activity}.short")}
        %h2= t(".#{activity}.short")
        %img{:alt => t(".#{activity}.short"), :src => "/activities/#{activity}.jpg"}/
      = raw t(".#{activity}.rest")
  = raw "<div class='line'> &nbsp;</div>" if (index.modulo(2)) != 0
