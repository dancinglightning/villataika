<% activities.each do |activity| %>

<div class="news_box">
  <div class="box_inner">
    <div class="captioned_image">
      <a href="/activities/large/<%=activity%>.jpg" rel="lightbox[activity]" title="<%= t(".#{activity}.short")%>">
        <img src="/activities/<%=activity%>.jpg" >
        </a>
    </div>
    <h2> <%= t(".#{activity}.short")%> </h2>
    <%=raw t(".#{activity}.rest")%>
  </div>
</div>
<div class="divider"> </div>
<%end%>