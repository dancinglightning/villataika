.bookform
  = form_tag(:action => "booking", :method => "post") do
    - if flash[:errors]
      %br/
      .flash.errors
        - flash[:errors].each do |field , message|
          = t("booking.#{field}")
          = raw message
          %br/
    %table{:border => "0px", :cellpadding => "8", :cellspacing => "8", :width => "100%"}
      %tr
        %td{:colspan => "2"}
          %label{:for => "arrival"}>= t('booking.arrival')
          \:
        %td{:colspan => "2"}
          %input#arriving_on{:name => "booking[arriving]", :size => "35", :type => "text", :value => @booking.arriving}/
        %td{:colspan => "2"}
          %label{:for => "nights"}>= t('booking.nights')
          \:
        %td{:colspan => "2"}
          %select.nights{:name => "booking[nights]"}
            - nights = params[:booking] ? params[:booking][:nights] : 1
            - ["1"  , "2" , "3" , "4" , "5" , "6" , "7"].each do |ni|
              <option #{raw'selected="selected"' if nights == ni}>#{ni.to_s}
            %option= t('booking.call')
      %tr#rooms_day
        %td{:colspan => "8"}
          %table
            %tr
              %td{:colspan => "2"}
                = t("booking.room_wish")
                *:
            %tr
              = render :template => "bookings/rooms_day"
      %tr
        %td{:colspan => "2"}
          %label{:for => "name"}>= t('booking.name')
          \:
        %td{:colspan => "2"}
          %input{:name => "booking[name]", :size => "35", :type => "text", :value => @booking.name}/
        %td{:colspan => "2"}
          %label{:for => "email"}>= t('booking.email')
          \:
        %td{:colspan => "2"}
          %input{:name => "booking[email]", :size => "35", :type => "text", :value => @booking.email}/
      %tr
        %td{:colspan => "2"}
          %label{:for => "phone"}>= t('booking.phone')
          \:
        %td{:colspan => "2"}
          %input{:name => "booking[phone]", :size => "35", :type => "text", :value => @booking.phone}/
        %td{:colspan => "2"}
          %label{:for => "comment"}= t('booking.comment')
          %br/
        %td{:colspan => "2"}
          %textarea{:cols => "35", :name => "booking[comment]", :rows => "2"}= @booking.comment
    %input#room_id{:name => "booking[room_id]", :type => "hidden", :value => (params[:booking][:room_id] rescue nil)}/
    %tr
      %td{:colspan => "2"}
        %input{:name => "submit", :type => "submit", :value => t('booking.submit')}/
      %td{:colspan => "6"}
%br/
%b *
= raw t('booking.confirmation')
